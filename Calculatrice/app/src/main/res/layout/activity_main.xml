<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:stretchColumns="*"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/ecran"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=""
            android:inputType="number"
            android:translationX="130dp" />

    </TableRow>

    <TableRow
        android:layout_width="600dp"
        android:layout_height="match_parent"><![CDATA[
        android:stretchColumns="*">

        ]]>

        <Button
            android:id="@+id/num1"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="calc"
            android:text="1" />

        <Button
            android:id="@+id/num2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="calc"
            android:text="2" />

        <Button
            android:id="@+id/num3"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="calc"
            android:text="3" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/num4"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="calc"
            android:text="4" />

        <Button
            android:id="@+id/num5"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="calc"
            android:text="5" />

        <Button
            android:id="@+id/num6"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="calc"
            android:text="6" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/num7"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="calc"
            android:text="7" />

        <Button
            android:id="@+id/num8"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="calc"
            android:text="8" />

        <Button
            android:id="@+id/num9"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="calc"
            android:text="9" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/plus"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="calcOp"
            android:text="+" />

        <Button
            android:id="@+id/num0"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="calc"
            android:text="0" />

        <Button
            android:id="@+id/mult"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="calcOp"
            android:text="*" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/div"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="calcOp"
            android:text="/" />

        <Button
            android:id="@+id/moins"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="calcOp"
            android:text="-" />

        <Button
            android:id="@+id/eq"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:onClick="res"
            android:text="=" />

    </TableRow>

    <LinearLayout
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/vider"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:onClick="vider"
            android:text="VIDER" />

        <Button
            android:id="@+id/Enregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:onClick="add"
            android:text="ENREGISTER" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</TableLayout>